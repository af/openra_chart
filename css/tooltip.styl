.tooltip
    position: absolute
    background: rgba(#000, 0.9)
    padding: 10px
    max-width: 300px

    &.hidden
        visibility: hidden

    // CSS left arrow
    &:before
        content: ''
        display: block
        position: absolute
        left: -10px
        top: 80px
        width: 0
        height: 0
        border-top: 10px solid transparent
        border-bottom: 10px solid transparent
        border-right: 10px solid rgba(#000, 0.9)

    h2
        margin: 0 0 3px
        font-family: monospace
        font-size: 1em

    div
        color: #aaa
        font-family: monospace

    .cost
        position: absolute
        top: 10px
        right: 10px
        font-weight: bold

    .description
        margin: 13px 0
        font-size: 0.85em

    b
        display: inline-block
        width: 70px
